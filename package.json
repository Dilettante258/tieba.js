{
	"name": "tieba.js",
	"version": "1.1.0",
	"description": "一个基于JavaScript实现的百度贴吧API调用库。",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"type": "module",
	"scripts": {
		"test": "node --test --require ts-node/register ./test/User.test.ts",
		"test-all": "node --test --require ts-node/register ./test/**/*.test.ts",
		"test-coverage": "node --test --experimental-test-coverage --require ts-node/register ./test/**/*.test.ts",
		"build": "rollup -c",
		"insert-info": "scripts\\insert-package-info.sh",
		"pbjs-codegen": "scripts\\pbjs-codegen.sh",
		"prepare": "chmod +x ./scripts/*.sh && ./scripts/insert-package-info.sh && ./scripts/pbjs-codegen.sh"
	},
	"keywords": ["tieba", "protobuf", "node.js", "baidu"],
	"author": "Dilettante258",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Dilettante258/tieba.js.git"
	},
	"license": "ISC",
	"files": ["dist"],
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@rollup/plugin-commonjs": "^28.0.2",
		"@rollup/plugin-node-resolve": "^16.0.0",
		"@rollup/plugin-typescript": "^12.1.2",
		"protobufjs": "^7.4.0",
		"protobufjs-cli": "^1.1.3",
		"rollup": "^4.34.2",
		"rollup-plugin-progress": "^1.1.2",
		"ts-node": "^10.9.2",
		"tslib": "^2.8.1",
		"typescript": "^5.6.2"
	},
	"dependencies": {
		"@types/node": "^22.13.1",
		"long": "^5.2.4",
		"node-html-parser": "^6.1.13"
	}
}
